{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "types": ["typePatches"]
}
